                <ITEXT FONT="DejaVu Sans Bold" FONTSIZE="11" CH="Liáng yóu qŭ shě suŏ yĭ bù rú"/>
                <para PARENT="Default Paragraph Style" ALIGN="1" LINESPMode="1" LINESP="12" INDENT="0" RMARGIN="0" FIRST="-5.64094488188976" VOR="2.86299212598425" NACH="2.86299212598425" BCOLOR="None"/>
                <para PARENT="Default Paragraph Style" ALIGN="1" LINESPMode="1" LINESP="12" INDENT="0" RMARGIN="0" FIRST="-5.64094488188976" VOR="2.86299212598425" NACH="2.86299212598425" BCOLOR="None"/>
                <ITEXT FONT="DejaVu Sans Bold" FONTSIZE="11" CH=" "/>
                <tab FONT="DejaVu Sans Bold" FONTSIZE="11"/>
                <ITEXT FONT="DejaVu Sans Bold" FONTSIZE="11" CH="Es precisamente por aferrarnos y rechazar,"/>
                <breakline/>
                <ITEXT FONT="DejaVu Sans Bold" FONTSIZE="11" CH="que perdemos nuestra armonía natural. "/>
                <para PARENT="Default Paragraph Style" ALIGN="1" LINESPMode="1" LINESP="12" INDENT="0" RMARGIN="0" FIRST="-5.64094488188976" VOR="2.86299212598425" NACH="2.86299212598425" BCOLOR="None"/>
